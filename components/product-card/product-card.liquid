{% doc %}
  Product Card

  @param {string} title - Product title
  @param {string} image - Product image URL
  @param {number} price - Product price in cents
  @param {number} [compare_at_price] - Product price in cents
  @param {string} [badge] - Optional product badge
{% enddoc %}

<article class="ProductCard">
  <div class="ProductCard__Image">
    {% render 'components/image/image', image: image, alt: title %}

    <div class="ProductCard__Badges">
      {% assign badge_list = badge %}

      {% if compare_at_price > price %}
        {% assign badge_list = badge_list | append: ',' | append: 'Sale' %}
      {% endif %}

      {% assign badge_list = badge_list | split: ',' %}

      {% if badge_list.size > 0 %}
        {% render 'components/badge-group/badge-group', badge_list: badge_list %}
      {% endif %}
    </div>
  </div>

  {% render 'components/text/text', text: title, variant: 'BodyLarge' %}

  {% render 'components/price-list/price-list', price: price, compare_at_price: compare_at_price %}
</article>
